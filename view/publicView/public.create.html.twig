{% extends 'template.html.twig' %}
{% block title %} Home | Login {% endblock %}
{% block mainClass %}"flex-1 p-6"{% endblock %}
{% block content %}
    <div class="w-1/6 mx-auto text-center border border-blue-500 rounded-xl p-10 max-h-fit">
        <form action="./" method="POST">
            <h3 class="text-xl font-bold pb-4" id="createFormHeader">Create Account</h3>
            <div>
                <label class="text-gray-600 font-bold inline-block pb-2" for="createLoginName" id="createFormUser">Name :</label>
                <input class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2" type="text" name="createLoginName" id="createName" required>
            </div>
            <div>
                <label class="text-gray-600 font-bold inline-block pb-2" for="createLoginName" id="createFormUser">Email<sup>&dagger;</sup> :</label>
                <input class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2" type="email" name="createLoginMail" id="createMail" required>
            </div>
            <div>
                <label class="text-gray-600 font-bold inline-block pb-2" for="createLoginPwd" id="createFormPwd">Password :</label>
                <input class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2" type="password" name="createLoginPwd" id="createLoginPwd" required>
            </div>
            <div>
                <label class="text-gray-600 font-bold inline-block pb-2" for="createLoginPwdX" id="createFormPwdX">Confirm Password :</label>
                <input class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2" type="password" name="createLoginPwdX" id="createLoginPwdX" required>
            </div>
            <div>
                <button type="submit" class="bg-[#4F46E5] w-auto mt-3 p-2 rounded-md text-white font-bold cursor-pointer hover:bg-[#181196]">Submit</button>
            </div>
            <div>
                <label for="privCheck" class="text-sm italic">I agree to the <a href="?route=privacy" class="text-blue-600 underline">Privacy Policy</a></label>
            <input type="checkbox" name="privCheck" id="privCheck" required>
            </div>
        </form>
    </div>
{% endblock %} {# end content #}
{% block footer %}
    <div class="place-self-center pl-[41%] mt-20 absolute bottom-40">
        &copy; <a href="https://leerlandais.com" target="_blank">Leerlandais 2024</a>
    </div>
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script src="../../public/scripts/createUserScript.js"></script>
{% endblock %}