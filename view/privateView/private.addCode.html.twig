{% extends 'privateView/private.home.html.twig' %}
{% block title %}Admin | Add Code {% endblock %}

  {% block mainClass %} "mx-auto mt-6" {% endblock %}

{% block content %}
    <form action="./" method="POST" id="addNewForm" class="mx-auto">
        <div class="bg-[#F9FAFB] h-auto w-auto flex items-center">
            <div class="h-max mx-auto flex flex-col items-center justify-center">
                <h3 class="text-xl font-bold text-center pb-2">Add Code</h3>
                <div class="bg-white shadow-xl px-10 pb-2 flex flex-row gap-4 text-sm text-center">
                    <div class="flex flex-row">
                        <div class="flex flex-col">
                            <div>
                                <label class="text-gray-600 font-bold inline-block pb-2" for="addFormDesc">Title</label>
                                <input class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2" type="text" name="addFormTitle" id="addFormTitle" placeholder="Title" required>
                            </div>
                            <div>
                                <label class="text-gray-600 font-bold inline-block pb-2" for="addFormDesc">Description</label>
                                <input class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2" type="text" name="addFormDesc" id="addFormDesc" placeholder="Description" required>
                            </div>

                            <div>
                                <label class="text-gray-600 font-bold inline-block pb-2" for="addFormCode">Code</label>
                                <textarea class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2"
                                          rows="10"
                                          name="addFormCode"
                                          id="addFormCode"
                                          placeholder="Code" required></textarea>
                            </div>

                            <div class="mt-4">
                                <label for="addFormTypeHtml" class="ml-4">HTML</label>
                                <input class="ps-2 me-1 addFormType" type="radio" id="addFormTypeHtml" name="addFormType" value="html" required>
                                <label for="addFormTypeCall" class="ml-4">Call</label>
                                <input class="ps-2 me-1 addFormType" type="radio" id="addFormTypeCall" name="addFormType" value="phpCall" required>
                                <label for="addFormTypeFunc" class="ml-4">Function</label>
                                <input class="ps-2 me-1 addFormType" type="radio" id="addFormTypeFunc" name="addFormType" value="phpFunc" required>
                                <label for="addFormTypeJs" class="ml-4">JS</label>
                                <input class="ps-2 me-1 addFormType" type="radio" id="addFormTypeJs" name="addFormType" value="jsCode" required>
                                <label for="addFormTypeJsX" class="ml-4">JSXtra</label>
                                <input class="ps-2 me-1 addFormType" type="radio" id="addFormTypeJsX" name="addFormType" value="jsXtra" required>
                            </div>
                        </div>
                        <!--        <div class="flex flex-col"></div>       -->
                    </div>
                </div>
                <div>
                    <button class="bg-[#4F46E5] w-full py-2 px-6 mt-2 rounded-md text-white font-bold cursor-pointer hover:bg-[#181196]" type="submit">Add</button>
                </div>
            </div>
        </div>
    </form>

{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="scripts/addFormScript.js"></script>
{% endblock %}