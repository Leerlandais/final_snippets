{% extends 'template.html.twig' %}

{% block title %} Admin | Home {% endblock %}
{% block headerLink %}<a href="?control=logout"><span class="text-white">Logout</span></a>{% endblock %}
{% block sideBarPublic %} {% endblock %}
{% block sideBarAdmin %}
    <li class="option-with-dropdown-inner">
    <a href="?control=add">
    <div class="flex items-center justify-between p-2 hover:bg-gray-700">
           <div class="flex items-center">
                <span>Add Code</span>
            </div>
        </div>
    </a>
        <a href="?control=html">
            <div class="flex items-center justify-between p-2 hover:bg-gray-700">
                <div class="flex items-center">
                    <span>Add HTML</span>
                </div>
            </div>
        </a>
    <a href="?control=exes">
        <div class="flex items-center justify-between p-2 hover:bg-gray-700">
            <div class="flex items-center">
                <span>Add Executable</span>
            </div>
        </div>
    </a>
    </li>

    <li class="option-with-dropdown">
        <div class="flex items-center justify-between p-2 hover:bg-gray-700">
            <div class="flex items-center">
                <i class="fas fa-file-alt mr-2"></i>
                <span>Update</span>
            </div>
            <i class="fas fa-chevron-down text-xs"></i>
        </div>
        <ul class="dropdown ml-4 hidden">
            <li class="option-with-dropdown-inner">
                <a href="?control=update&type=code">
                    <div class="flex items-center justify-between p-2 hover:bg-gray-700">
                        <div class="flex items-center">
                            <span>Code</span>
                        </div>
                    </div>
                </a>
            </li>
            <li class="option-with-dropdown-inner">
                <a href="?control=update&type=html">
                    <div class="flex items-center justify-between p-2 hover:bg-gray-700">
                        <div class="flex items-center">
                            <span>Html</span>
                        </div>
                    </div>
                </a>
            </li>
        </ul>
    </li>
{% endblock %} {# end sideBarAdmin #}

{% block content %}
    <div class="container pt-8 mt-6 flex flex-col gap-4">
            {% if getLatest is not iterable %}
                <h3 class="text-3xl">Sorry, no codes are currently available</h3>
            {% else %}
                <h3>{{ headerTitle }}</h3>
                <!-- component -->
                <div class="flex items-center justify-center">
                    <div class="overflow-x-auto">
                        <h3 class="text-3xl mb-2">Here's some of the latest snippets</h3>
                        <table class="min-w-full bg-white shadow-md rounded-xl">
                            <thead>
                            <tr class="bg-blue-gray-100 text-center text-gray-700">
                                <th class="py-3 px-4">Name</th>
                                <th class="py-3 px-4">Description</th>
                                <th class="py-3 px-4">View Code</th>

                            </tr>
                            </thead>
                            <tbody class="text-blue-gray-900">
                            {% for latest in getLatest %}
                                <tr class="border-b border-blue-gray-200">
                                    <td class="py-3 px-4">{{ latest.getSnipCodeTitle }}</td>
                                    <td class="py-3 px-4">{{ latest.getSnipCodeDesc }}</td>
                                    <td class="py-3 px-4">
                                        <a href="?control=showCode&id={{ latest.getSnipCodeId }}" class="font-medium text-blue-600 hover:text-blue-800">Update</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            {% endif %}
    </div>


{% endblock %}