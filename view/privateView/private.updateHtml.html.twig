{% extends 'privateView/private.home.html.twig' %}
{% block title %}Admin | Update Code {% endblock %}
{% block mainClass %} 'flex flex-col text-center mx-auto w-fit pt-24' {% endblock %}
{% block content %}
    {% if getData is not iterable %}
        <h3 class="text-3xl">Sorry, no codes are currently available</h3>
        {% else %}
            <h3>{{ headerTitle }}</h3>
                <!-- component -->
                <div class="flex items-center justify-center">
                    <div class="overflow-x-auto">
                        <h3 class="text-3xl"></h3>
                        <table class="min-w-full bg-white shadow-md rounded-xl">
                            <thead>
                            <tr class="bg-blue-gray-100 text-gray-700">
                                <th class="py-3 px-4 text-left">Name</th>
                                <th class="py-3 px-4 text-left">Description</th>
                                <th class="py-3 px-4 text-left">View HTML</th>

                            </tr>
                            </thead>
                            <tbody class="text-blue-gray-900">
                            {% for data in getData %}
                                <tr class="border-b border-blue-gray-200">
                                    <td class="py-3 px-4">{{ data.getSnipHtmlTitle }}</td>
                                    <td class="py-3 px-4">{{ data.getSnipHtmlDesc }}</td>
                                    <td class="py-3 px-4">
                                        <a href="?control=showHtml&id={{ data.getSnipHtmlId }}" class="font-medium text-blue-600 hover:text-blue-800">Update</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>

    {% endif %}
{% endblock %}